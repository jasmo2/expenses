<%= form_for @expense, html: {class: "ui error form segment createForm"} do |f| %>
  <% if @expense.errors.any? %>
    <div id="error_explanation" class="ui error message">
      <h2 class='header'><%= pluralize(@expense.errors.count, "error") %> prohibited this expense from being saved:</h2>

      <ul>
      <% @expense.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <!-- 
    category
    fecha
    concept
    amount
   -->
  <h4 class="ui dividing header">Add Expense</h4>
    <div class="two fields">
      <div class="field">
        <label>Fecha</label>
        <%= f.date_field :fecha %>
      </div>
      <div class="field"></div>
    </div>
    <div class="two fields">
      <div class="field">
        <label>Amount</label>
        <%= f.number_field :amount %>
      </div>
      <div class="field"></div>
    </div>
    <div class="two fields">
      <div class="field">
        <label>Categories</label>
          <div class="ui selection dropdown">
            <input type="hidden" name="expense[category_id]">
            <div class="default text">Categories</div>
            <i class="dropdown icon"></i>
            <div class="menu">
              <%if !@categories.blank? 
                 for category in @categories %>
                  <div class="item" data-value="<%= category.id %>"><%=category.name%></div>
              <% end 
                end %>
            </div>
          </div>
      </div>
      <div class="field"></div>
    </div>
    <div class="field">
      <label>Concept</label>
      <%= f.text_area :concept %>
    </div>

    <%= f.submit(class: "ui green button") %>

<% end %>


